<view wx:if="{{canIUse}}">
  <view class='content' wx:if="{{userInfo}}">
    <image src="{{!userInfo.avatarUrl?'':userInfo.avatarUrl}}"></image>
    <text>{{userInfo.nickName?userInfo.nickName:'用户昵称'}}</text>
  </view>
  <view class='btnBox'>
    <button class='bottom' type='primary' open-type="getUserInfo" lang="zh_CN" bindgetuserinfo="getUserInfo">
      授权登录
    </button>
    <button class='bottom' type='primary' open-type="contact">进入客服会话</button>
    <button class='bottom' type='primary' open-type="openSetting">打开授权设置页</button>
  </view>
</view>

<view wx:else>请升级微信版本</view>